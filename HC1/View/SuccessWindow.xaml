<Window x:Class="PrviProjektniZadatakHCI.View.SuccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrviProjektniZadatakHCI.View"
        mc:Ignorable="d"
        
      
    Title="Informacija" 
  Height="200" Width="400"
    WindowStyle="None" 
    ResizeMode="NoResize"
    Background="Gray"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <Border CornerRadius="15" Background="White" Padding="0"  BorderThickness="5" Margin="6,5,5,4">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Ellipse Width="60" Height="60" HorizontalAlignment="Center">


                </Ellipse>
                <Border Width="20" Height="30" Padding="0" Background="White" CornerRadius="0" DockPanel.Dock="Top">
                    <Ellipse Margin="-25,-33,-24,12">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="pack://application:,,,/Images/successAdd.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>
                <TextBlock x:Name="MessageText" 
                       FontSize="14" Foreground="Gray" 
                       HorizontalAlignment="Center" TextAlignment="Center"
                       Width="300" Height="37"/>
                <Button Content="OK" 
                    Background="#10981f"
                    Width="70" Height="28" Margin="0,-6,10,0"

                    Click="CloseMessageBox"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
